<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="bms.oslo_datatype_primitive_enumeration" owl="1">
        <div class="o_bms_hover p-0">
            <div class="row m-0 p-0"  t-on-mouseover="(ev) => this.highlightValueField(ev)" t-on-mouseout="(ev) => this.unhighlightValueField(ev)" > 

                <div class="col-3 o_form_label p-1 align-middle">
                    <t t-out="attrName" />
                    <t t-out="unit" />
                </div>
                
                <div class="col-7 border-start rounded-3 pl-1">
                    <t t-out="attrValueToDisplay" />                    
                </div>

                <div class="col-1 d-flex justify-content-end p-0">
                    <button class="btn btn-primary" t-on-click="() => this.changeAttrValue()">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </button>
                </div>
                 <div class="col-1 d-flex justify-content-end p-0">
                    <span class="pr-1">
                     <button class="btn btn-primary" t-on-click="() => this.copyAttrValueToSiblings()" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Copy atttribute value to all siblings">
                        <i class="fa fa-copy"></i>
                    </button>
                    </span>

                </div>
            </div>
        </div>
    </t>
</templates>