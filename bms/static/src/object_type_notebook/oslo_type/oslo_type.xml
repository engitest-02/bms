<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="bms.oslo_type" owl="1">
        <!-- <t t-out="'oslo_type props:'"/> -->
        <!-- <t t-out="values"/>  -->
        <table class="o_bms_table">
            <tr>
                <td>
                    <span class="o_form_label"> object type  </span>
                </td>
                <td >
                    <!-- <t t-log="attrDefValueRecs" /> -->
                    <!-- <t t-log="className" /> -->
                    <t t-out="className"/>
                </td>
                <td>
                </td>
                <td>
                    <button class="btn btn-primary" t-on-click="() => this.changeOtlAndType()">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </button>
                </td>
            </tr>

            <!-- for each type display attributes definition and if exists the assigned value -->
            <t t-foreach="attrDefValueRecs" t-as="attrDefValueRec" t-key="attrDefValueRec.id">
                <t t-if="attrDefValueRec.id !=0">                    <!-- check if attr definitions have been defined-->
                    <tr>
                        <td>
                            <span class="o_form_label">
                                <t t-out="attrDefValueRec.osloattributen_name"/>
                            </span>
                        </td>
                        <td>
                            <t t-out="getValue(attrDefValueRec)"/>
                        </td>
                        <td>
                            <t t-out="formatUnit(attrDefValueRec.oslodatatype_primitive_attributen_constraints)"/>
                        </td>

                        <td>
                            <button class="btn btn-primary" t-on-click="() => this.changeAttrValue(attrDefValueRec)">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </button>

                        </td>
                    </tr>
                </t>
            </t>
        </table>

        <div>
            <t t-foreach="attrDefs.attributes" t-as="attribute" t-key="attribute.attr_name">
                <div>
                    <t t-out="attribute.attr_name" />
                </div>
                <t t-if="attribute.attr_datatype_def.oslo_datatype != 'OSLODatatypeComplex' and attribute.attr_datatype_def.oslo_datatype != 'OSLODatatypeComplex' ">
                    <OsloDatatypePrimitiveEnumeration attr="attribute" objectId="objectId" objectTypeId="objectTypeId"/>
                </t>
                
            </t>
        </div>
    </t>
</templates>