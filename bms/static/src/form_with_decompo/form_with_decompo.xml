<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="bms.decompositionRenderer" t-inherit="web.FormView" owl="1">
        <!-- make form bootstap flex -->
        <xpath expr="//Layout" position="attributes">
            <attribute name="className">model.useSampleModel ? 'o_view_sample_data' : '' + "d-flex"</attribute>
        </xpath>

        <!-- insert Decompostion -->
        <xpath expr="//t[@archInfo='archInfo']" position="before">
            <div class="o_bms_decompo">
                <Decomposition/>
            </div>
        </xpath>

        <!-- overriden archInfo has a flex grow-1 attribute -->
        <xpath expr="//t[@archInfo='archInfo']" position="attributes">
            <attribute name="archInfo">archInfo</attribute>
        </xpath>




    </t>
</templates>

