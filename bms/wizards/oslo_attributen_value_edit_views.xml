<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="bms_oslo_attributen_value_edit_form" model="ir.ui.view">
    <field name="name">bms.oslo_attributen_value_edit.form</field>
    <field name="model">bms.oslo_attributen_value_edit</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="object_id" readonly="1"/>
                <field name="object_type_id" readonly="1"/>
                <field name="attr_name" readonly="1"/>
                <field name="attr_def" readonly="1" />
                <field name="att_def_value_type_definition" readonly="1"/>
                <field name="att_def_value_type_definition" invisible="1"/>
                <field name="attr_def_value_type" readonly="1"/>
            </group>
            <group>
                <field name="value_char" attrs="{'invisible': [('attr_def_value_type', '!=', 'char')]}"/>
                <field name="value_boolean" attrs="{'invisible': [('attr_def_value_type', '!=', 'boolean')]}"/>
                <field name="value_date" attrs="{'invisible': [('attr_def_value_type', '!=', 'date')]}"/>
                <field name="value_datetime" attrs="{'invisible': [('attr_def_value_type', '!=', 'datetime')]}"/>
                <field name="value_float" attrs="{'invisible': [('attr_def_value_type', '!=', 'float')]}"/>
                <field name="value_integer" attrs="{'invisible': [('attr_def_value_type', '!=', 'integer')]}"/>
            </group>
        </form>
    </field>
</record>
</odoo>